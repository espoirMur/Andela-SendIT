{
  "name": "andela-send-it",
  "version": "1.0.0",
  "description": "SendIT is a courier service that helps users deliver parcels to different destinations. SendIT provides courier quotes based on weight categories.",
  "main": "index.js",
  "scripts": {
    "test": "mocha --compilers js:babel-core/register ./test/test*.js --exit",
    "start": "nodemon app/server.js --exec babel-node --",
    "nyc": "nyc npm test",
    "code-climate": "codeclimate-test-reporter < ./coverage/lcov.info",
    "coveralls": "npm run nyc -- --report lcovonly && cat ./coverage/lcov.info | coveralls"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/espoirMur/Andela-SendIT.git"
  },
  "keywords": [],
  "author": "Espoir Murhabazi",
  "license": "ISC",
  "bugs": {
    "url": "https://github.com/espoirMur/Andela-SendIT/issues"
  },
  "homepage": "https://github.com/espoirMur/Andela-SendIT#readme",
  "devDependencies": {
    "babel-preset-es2015": "^6.24.1",
    "chai": "^4.2.0",
    "chai-http": "^4.2.0",
    "codeclimate-test-reporter": "^0.5.1",
    "coveralls": "^3.0.2",
    "eslint": "^5.8.0",
    "eslint-config-airbnb-base": "^13.1.0",
    "eslint-plugin-import": "^2.14.0",
    "mocha": "^5.2.0",
    "mocha-lcov-reporter": "^1.3.0",
    "nyc": "^13.1.0",
    "prettier-eslint": "^8.8.2"
  },
  "dependencies": {
    "babel-cli": "^6.26.0",
    "babel-istanbul": "^0.12.2",
    "body-parser": "^1.18.3",
    "express": "^4.16.4",
    "request": "^2.88.0",
    "server-destroy": "^1.0.1"
  },
  "nyc": {
    "all": true,
    "reporter": [
      "text",
      "html",
      "json"
    ],
    "exclude": [
      "wdio.conf.js",
      "coverage/**/*.js",
      "./test/test*.js",
      "UI/",
      "config.js",
      "config.sample.js"
    ]
  }
}
